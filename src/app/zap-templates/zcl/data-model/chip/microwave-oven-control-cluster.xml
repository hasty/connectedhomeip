<?xml version="1.0"?>
<configurator>
  <cluster apiMaturity="provisional">
    <attribute code="0x0001" default="30" define="COOK_TIME" optional="false" side="server" type="elapsed_s" writable="false">CookTime</attribute>
    <attribute code="0x0002" default="100" define="POWER_SETTING" optional="false" side="server" type="int8u" writable="false">PowerSetting</attribute>
    <attribute code="0x0003" default="10" define="MIN_POWER" optional="true" side="server" type="int8u" writable="false">MinPower</attribute>
    <attribute code="0x0004" default="100" define="MAX_POWER" optional="true" side="server" type="int8u" writable="false">MaxPower</attribute>
    <attribute code="0x0005" default="10" define="POWERSTEP" optional="true" side="server" type="int8u" writable="false">PowerStep</attribute>
    <client init="false" tick="false">true</client>
    <code>0x005F</code>
    <command code="0x00" name="SetCookingParameters" optional="false" source="client">
      <arg name="CookMode" optional="true" type="int8u"/>
      <arg name="CookTime" optional="true" type="elapsed_s"/>
      <arg max="MAX_POWER" min="MIN_POWER" name="PowerSetting" optional="true" type="int8u"/>
      <description>Set Cooking Parameters</description>
    </command>
    <command code="0x01" name="AddMoreTime" optional="true" source="client">
      <arg name="TimeToAdd" optional="false" type="elapsed_s"/>
      <description>Add More Cooking Time</description>
    </command>
    <define>MICROWAVE_OVEN_CONTROL_CLUSTER</define>
    <description>Attributes and commands for configuring the microwave oven control, and reporting cooking stats.</description>
    <domain>Appliances</domain>
    <name>Microwave Oven Control</name>
    <server init="false" tick="false">true</server>
  </cluster>
  <domain name="CHIP"/>
</configurator>
