<?xml version="1.0"?>
<configurator>
  <cluster>
    <attribute code="0x0000" define="SUPPORTED_MODES" entryType="ModeOptionStruct" isNullable="false" length="255" optional="false" side="server" type="ARRAY" writable="false">SupportedModes</attribute>
