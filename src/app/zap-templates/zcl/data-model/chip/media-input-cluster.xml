<?xml version="1.0"?>
<configurator>
  <bitmap name="Feature" type="bitmap32">
    <cluster code="0x0507"/>
    <field mask="0x1" name="NameUpdates"/>
  </bitmap>
  <cluster>
    <attribute code="0x0000" define="MEDIA_INPUT_LIST" entryType="InputInfoStruct" length="254" optional="false" side="server" type="ARRAY" writable="false">InputList</attribute>
