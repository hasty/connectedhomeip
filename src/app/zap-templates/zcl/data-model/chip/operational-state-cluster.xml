<?xml version="1.0"?>
<configurator>
  <cluster>
    <attribute code="0x0000" define="PHASE_LIST" entryType="char_string" isNullable="true" optional="false" side="server" type="ARRAY" writable="false">PhaseList</attribute>
    <attribute code="0x0001" define="CURRENT_PHASE" isNullable="true" max="0x1F" min="0x00" optional="false" side="server" type="int8u" writable="false">CurrentPhase</attribute>
    <attribute code="0x0002" define="COUNTDOWN_TIME" isNullable="true" max="259200" min="0x00" optional="true" side="server" type="elapsed_s" writable="false">CountdownTime</attribute>
    <attribute code="0x0003" define="OPERATIONAL_STATE_LIST" entryType="OperationalStateStruct" optional="false" side="server" type="ARRAY" writable="false">OperationalStateList</attribute>
    <attribute code="0x0004" define="OPERATIONAL_STATE" optional="false" side="server" type="OperationalStateEnum" writable="false">OperationalState</attribute>
    <attribute code="0x0005" define="OPERATIONAL_ERROR" optional="false" side="server" type="ErrorStateStruct" writable="false">OperationalError</attribute>
    <client init="false" tick="false">true</client>
    <code>0x0060</code>
    <command code="0x00" name="Pause" optional="true" response="OperationalCommandResponse" source="client">
      <description>Upon receipt, the device SHALL pause its operation if it is possible based on the current function of the server.</description>
    </command>
    <command code="0x01" name="Stop" optional="true" response="OperationalCommandResponse" source="client">
      <description>Upon receipt, the device SHALL stop its operation if it is at a position where it is safe to do so and/or permitted.</description>
    </command>
    <command code="0x02" name="Start" optional="true" response="OperationalCommandResponse" source="client">
      <description>Upon receipt, the device SHALL start its operation if it is safe to do so and the device is in an operational state from which it can be started.</description>
    </command>
    <command code="0x03" name="Resume" optional="true" response="OperationalCommandResponse" source="client">
      <description>Upon receipt, the device SHALL resume its operation from the point it was at when it received the Pause command, or from the point when it was paused by means outside of this cluster (for example by manual button press).</description>
    </command>
    <command code="0x04" name="OperationalCommandResponse" optional="true" source="server">
      <arg name="CommandResponseState" type="ErrorStateStruct"/>
      <description>This command SHALL be generated in response to any of the Start, Stop, Pause, or Resume commands.</description>
    </command>
    <define>OPERATIONAL_STATE_CLUSTER</define>
    <description>This cluster supports remotely monitoring and, where supported, changing the operational state of any device where a state machine is a part of the operation.</description>
    <domain>General</domain>
    <event code="0x00" name="OperationalError" optional="false" priority="critical" side="server">
      <description>OperationalError</description>
      <field id="0" name="ErrorState" type="ErrorStateStruct"/>
    </event>
    <event code="0x01" name="OperationCompletion" optional="true" priority="info" side="server">
      <description>OperationCompletion</description>
      <field id="0" name="CompletionErrorCode" type="enum8"/>
      <field id="1" isNullable="true" name="TotalOperationalTime" optional="true" type="elapsed_s"/>
      <field id="2" isNullable="true" name="PausedTime" optional="true" type="elapsed_s"/>
    </event>
    <globalAttribute code="0xFFFD" side="server" value="1"/>
    <name>Operational State</name>
    <server init="false" tick="false">true</server>
  </cluster>
  <domain name="CHIP"/>
  <enum name="OperationalStateEnum" type="enum8">
    <cluster code="0x0060"/>
    <item name="Stopped" value="0x00"/>
    <item name="Running" value="0x01"/>
    <item name="Paused" value="0x02"/>
    <item name="Error" value="0x03"/>
  </enum>
  <enum name="ErrorStateEnum" type="enum8">
    <cluster code="0x0060"/>
    <item name="NoError" value="0x00"/>
    <item name="UnableToStartOrResume" value="0x01"/>
    <item name="UnableToCompleteOperation" value="0x02"/>
    <item name="CommandInvalidInState" value="0x03"/>
  </enum>
  <struct name="OperationalStateStruct">
    <cluster code="0x0060"/>
    <cluster code="0x0061"/>
    <item name="OperationalStateID" optional="false" type="enum8"/>
    <item length="64" name="OperationalStateLabel" optional="true" type="char_string"/>
  </struct>
  <struct name="ErrorStateStruct">
    <cluster code="0x0060"/>
    <cluster code="0x0061"/>
    <item name="ErrorStateID" optional="false" type="enum8"/>
    <item length="64" name="ErrorStateLabel" optional="true" type="char_string"/>
    <item length="64" name="ErrorStateDetails" optional="true" type="char_string"/>
  </struct>
</configurator>
